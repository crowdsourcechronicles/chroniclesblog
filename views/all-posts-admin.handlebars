<div class="max-w-lg text-gray-900 bg-white border border-gray-200 rounded-lg dark:bg-gray-700 dark:border-gray-600 dark:text-white container mx-auto my-2">
  {{#each posts}}
    
    <a href="/dashboard/edit/{{id}}" aria-current="true" class="block w-full px-4 border-b border-gray-200 cursor-pointer hover:bg-gray-100 hover:text-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-700 focus:text-blue-700 dark:border-gray-600 dark:hover:bg-gray-600 dark:hover:text-white dark:focus:ring-gray-500 dark:focus:text-white">
      <span class="text-2xl font-medium">{{title}}</span><br>
      <span class="text-sm">{{format_date createdAt}}</span>
    </a>
  {{/each}}
</div>

